# Firecrawl API Configuration
FIRECRAWL_API_KEY=your-firecrawl-api-key-here

# RunPod Configuration (after deploying your pod)
RUNPOD_ENDPOINT_URL=https://your-pod-id-8000.proxy.runpod.net/v1
RUNPOD_API_KEY=your-runpod-api-key-here

# PostgreSQL Configuration (for conversation persistence)
POSTGRES_URI=postgresql://langchain:langchain_dev_password@localhost:5432/langchain_db
POSTGRES_URI_CUSTOM=postgresql://langchain:langchain_dev_password@localhost:5432/langchain_db

# Demo Configuration (optional - static thread ID for simple demo)
DEFAULT_THREAD_ID=demo-user-001

# vLLM Configuration (optional, used in Docker)
MODEL_NAME=NousResearch/Hermes-2-Pro-Mistral-7B
HOST=0.0.0.0
PORT=8000
GPU_MEMORY_UTILIZATION=0.95
MAX_MODEL_LEN=4096
TENSOR_PARALLEL_SIZE=1

# Langsmith
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=*********
LANGSMITH_PROJECT=vllm-langchain